#include<iostream>
#include<iomanip>
using namespace std;
int main(){
    int N , amt , sum = 0;
    cin >> N >> amt;
    int weight[N] , profit[N];
    for(int ind = 0 ; ind < N ; ind++)
    cin >> weight[ind];
    for(int ind = 0 ; ind < N ; ind++)
    cin >> profit[ind];
    for(int i = 0 ; i < N ; i++){
        if(amt >= weight[i]){
            sum += profit[i];
            amt -= weight[i];
        }
    }
    cout<<fixed<<setprecision(2)<<(float)sum;
    return 0 ;
}
